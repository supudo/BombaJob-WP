<UserControl x:Class="BombaJob.Utilities.Controls.InputPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="279" d:DesignWidth="480">

    <StackPanel x:Name="LayoutRoot" Width="480" Height="279" Background="#FF000000">
        <TextBlock Name="lblValue" TextWrapping="Wrap" Text="Desc" Foreground="#FFFFFFFF" FontSize="24" Margin="0,10,0,0" Padding="10,3,10,5" />
        <TextBox x:Name="txtValue" />
        <Button x:Name="btnOK" Content="OK"/>
        <Button x:Name="btnCancel" Content="Cancel"/>
    </StackPanel>
    
</UserControl>
